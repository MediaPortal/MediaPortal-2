<?xml version="1.0" encoding="utf-8"?>
<!--
  Contains a default mapping of remote keys to MP2 keys.
  For each key mapping to be interpreted by MP2, there must be a RemoteKeyCode element.
  The Code attribute contains the key name which comes from the IRSS server. The Key_Name attribute contains
  a reference to a MP2 key. The prefix (S: or P:) determines if the key is a special (S:) or printable (P:) key.
  The suffix is the special key name or the printable key's character.

  Each key code may only be mapped once (i.e. a key code given in the Code attribute may only be at most once).
  It is not necessary to add a RemoteKeyCode entry for each IRSS key code, but it is recommended to do so. If a remote key
  should not be mapped to an MP2 key, the special key None (S:None) can be used.
-->
<ArrayOfRemoteKeyCode xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <RemoteKeyCode Code="101" Key_Name="S:Power" />
  <!-- Default mapping: 
  <RemoteKeyCode Code="35" Key_Name="S:Back" />
  -->
  <RemoteKeyCode Code="35" Key_Name="S:Escape" />
  <!-- Unmappable, handled by OS
  <RemoteKeyCode Code="34" Key_Name="S:Ok" />
  -->
  <RemoteKeyCode Code="13" Key_Name="S:Start" />

  <RemoteKeyCode Code="72" Key_Name="S:RecordedTV" />
  <RemoteKeyCode Code="38" Key_Name="S:Guide" />
  <RemoteKeyCode Code="37" Key_Name="S:LiveTV" />

  <RemoteKeyCode Code="16" Key_Name="S:VolumeUp" />
  <RemoteKeyCode Code="17" Key_Name="S:VolumeDown" />
  <RemoteKeyCode Code="14" Key_Name="S:Mute" />

  <!-- Default mapping:  
  <RemoteKeyCode Code="18" Key_Name="S:ChannelUp" />
  <RemoteKeyCode Code="19" Key_Name="S:ChannelDown" />
  -->
  <RemoteKeyCode Code="18" Key_Name="S:PageUp" />
  <RemoteKeyCode Code="19" Key_Name="S:PageDown" />

  <!-- Unmappable, handled by OS
  <RemoteKeyCode Code="30" Key_Name="S:Up" />
  <RemoteKeyCode Code="31" Key_Name="S:Down" />
  <RemoteKeyCode Code="32" Key_Name="S:Left" />
  <RemoteKeyCode Code="33" Key_Name="S:Right" />
  -->
  <RemoteKeyCode Code="15" Key_Name="S:Info" />

  <RemoteKeyCode Code="25" Key_Name="S:Stop" />
  <RemoteKeyCode Code="24" Key_Name="S:Pause" />
  <RemoteKeyCode Code="23" Key_Name="S:Record" />
  <RemoteKeyCode Code="22" Key_Name="S:Play" />
  <RemoteKeyCode Code="21" Key_Name="S:Rew" />
  <RemoteKeyCode Code="20" Key_Name="S:Fwd" />

  <!-- Unmappable, handled by OS
  <RemoteKeyCode Code="27" Key_Name="S:Previous" />
  <RemoteKeyCode Code="26" Key_Name="S:Next" />
  <RemoteKeyCode Code="0" Key_Name="P:0" />
  <RemoteKeyCode Code="1" Key_Name="P:1" />
  <RemoteKeyCode Code="2" Key_Name="P:2" />
  <RemoteKeyCode Code="3" Key_Name="P:3" />
  <RemoteKeyCode Code="4" Key_Name="P:4" />
  <RemoteKeyCode Code="5" Key_Name="P:5" />
  <RemoteKeyCode Code="6" Key_Name="P:6" />
  <RemoteKeyCode Code="7" Key_Name="P:7" />
  <RemoteKeyCode Code="8" Key_Name="P:8" />
  <RemoteKeyCode Code="9" Key_Name="P:9" />

  <RemoteKeyCode Code="10" Key_Name="S:Clear" />
  <RemoteKeyCode Code="11" Key_Name="S:Enter" />
  -->

  <RemoteKeyCode Code="90" Key_Name="S:TeleText" />

  <RemoteKeyCode Code="91" Key_Name="S:Red" />
  <RemoteKeyCode Code="92" Key_Name="S:Green" />
  <RemoteKeyCode Code="93" Key_Name="S:Yellow" />
  <RemoteKeyCode Code="94" Key_Name="S:Blue" />
</ArrayOfRemoteKeyCode>
