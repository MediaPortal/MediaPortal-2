<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[Settings.General.System.Version.Help]"/>

    <!-- HomeServerModel -->
    <Model x:Key="Model" Id="854ABA9A-71A1-420b-A657-9641815F9C01"/>

    <!-- Contents -->
    <ControlTemplate x:Key="Contents_Template">
      <Grid DataContext="{Binding Source={StaticResource Model}}">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Height="70" VerticalAlignment="Center" Stretch="Uniform" Source="MP2Server.png" Margin="10"/>
        <Image Grid.Row="1" Height="70" VerticalAlignment="Center" Stretch="Uniform" Source="MP2Client.png" Margin="10"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
          <Label Content="Server :  " Color="{ThemeResource TextColor}" VerticalAlignment="Center"/>
          <Label Content="2.4.555.666" Color="{ThemeResource TextColor}" IsVisible="{Binding IsHomeServerConnected}" VerticalAlignment="Center"/>
          <Label Content="[ServerConnection.NoHomeServerAttached]" Color="{ThemeResource TextColor}" IsVisible="{Binding !IsHomeServerConnected}" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
          <Label Content="Client :  " Color="{ThemeResource TextColor}" VerticalAlignment="Center"/>
          <Label Content="2.4.555.666" Color="{ThemeResource TextColor}" VerticalAlignment="Center"/>
        </StackPanel>
        <Button x:Name="OkButton" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,10,10,0" Style="{ThemeResource DialogButtonStyle}" HorizontalAlignment="Center"
                Content="[System.Ok]" Command="{Command Source={Service ScreenManager},Path=CloseTopmostDialog}"/>
      </Grid>
    </ControlTemplate>

  </Include.Resources>
</Include>
