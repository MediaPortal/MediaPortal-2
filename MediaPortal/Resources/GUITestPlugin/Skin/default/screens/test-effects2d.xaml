<Screen
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <DockPanel LastChildFill="False">
    <Label DockPanel.Dock="Top" HorizontalAlignment="Center"
        Content="Effects test"
        Color="{ThemeResource TextColor}" Wrap="True"/>
    <Label DockPanel.Dock="Top" HorizontalAlignment="Center"
        Content="This screen shows a blue rectangle with a yellow border around it and a black Shadow effect"
        Wrap="True" FontSize="{ThemeResource SmallFontSize}"
        Color="{ThemeResource TextColor}"/>

    <Border x:Name="TestBorder" DockPanel.Dock="Center" BorderBrush="Yellow" BorderThickness="20"
        HorizontalAlignment="Center" VerticalAlignment="Center">
      <StackPanel x:Name="TestPanel" Width="200" Height="200" Background="Blue"/>
      <Border.Effect>
        <DropShadowEffect Color="Black" Direction="315" ShadowDepth="10" BlurRadius="5"/>
      </Border.Effect>
    </Border>
  </DockPanel>
</Screen>
