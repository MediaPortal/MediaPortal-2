<?xml version="1.0" encoding="utf-8"?>
<Canvas
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
<!-- TODO Albert78: Make more general - use master_dialog.xaml template, take button commands&texts from ScreenManager, ... -->

  <Border Canvas.Left="106" Canvas.Top="44" Width="540" Height="365" Background="#AFFFFFFF" CornerRadius="10">
    <Canvas Width="500" Height="345" Background="{StaticResource DialogBackgroundBrush}" >
      <Label Font="font13" Canvas.Left="34" Canvas.Top="10" Content="{Binding Source={Service ScreenManager},Path=DialogTitle}" Width="490"  Color="#FFF1E994" VerticalAlignment="Top"/>
      <Label Font="font13" Canvas.Left="34" Canvas.Top="60" Content="{Binding Source={Service ScreenManager},Path=DialogLine1}" Width="490"  Color="#FFF1E994" VerticalAlignment="Top"/>
      <Label Font="font13" Canvas.Left="34" Canvas.Top="90" Content="{Binding Source={Service ScreenManager},Path=DialogLine2}" Width="490"  Color="#FFF1E994" VerticalAlignment="Top"/>
      <Label Font="font13" Canvas.Left="34" Canvas.Top="120" Content="{Binding Source={Service ScreenManager},Path=DialogLine3}" Width="490"  Color="#FFF1E994" VerticalAlignment="Top"/>
      <Button Canvas.Left="50" Canvas.Top="150" Width="50" Height="40" Style="{StaticResource ButtonStyle}" Content="[system.yes]"
          Command="{Command Source={Service ScreenManager},Path=SetDialogResponse,Parameters=Yes}"/>
      <Button Canvas.Left="150" Canvas.Top="150" Width="50" Height="40" Style="{StaticResource ButtonStyle}" Content="[system.no]"
          Command="{Command Source={Service ScreenManager},Path=SetDialogResponse,Parameters=No}"/>
    </Canvas>
  </Border>
</Canvas>
