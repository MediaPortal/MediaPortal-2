<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
  <Style x:Key="AnalogClockTemplate" BasedOn="{x:Null}" TargetType="{x:Type ProgressBar}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate x:Name="AnalogClockTemplate">
          <Grid>
            <Ellipse Width="54" Height="54" StrokeThickness="3">
              <Ellipse.Stroke>
                <LinearGradientBrush>
                  <GradientStop Color="#F8AAAAAA" Offset="0" />
                  <GradientStop Color="#F8070707" Offset="1" />
                </LinearGradientBrush>
              </Ellipse.Stroke>
            </Ellipse>
            <Ellipse VerticalAlignment="Center" HorizontalAlignment="Center" Width="54" Height="54" Fill="#F8A0A0A0" StrokeThickness="3">
              <Ellipse.Stroke>
                <LinearGradientBrush>
                  <GradientStop Color="#F8070707" Offset="0" />
                  <GradientStop Color="#F8AAAAAA" Offset="1" />
                </LinearGradientBrush>
              </Ellipse.Stroke>
            </Ellipse>

            <Canvas Width="51" Height="51">
              <Ellipse Width="4" Height="4" Fill="Black" Canvas.Top="24" Canvas.Left="23" />
              <Rectangle Canvas.Top="2.5" Canvas.Left="24" Fill="Black" Width="2" Height="4">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="0" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="30" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="60" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24" Fill="Black" Width="2" Height="4">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="90" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="120" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="150" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24" Fill="Black" Width="2" Height="4">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="180" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="210" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="240" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24" Fill="Black" Width="2" Height="4">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="270" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="300" />
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle Canvas.Top="2.5" Canvas.Left="24.5" Fill="Black" Width="1" Height="3">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="1" CenterY="24" Angle="330" />
                </Rectangle.RenderTransform>
              </Rectangle>



              <Rectangle x:Name="HourHand" Canvas.Top="10.5" Canvas.Left="24" Fill="Black" Width="2" Height="15">
                <Rectangle.RenderTransform>
                  <RotateTransform x:Name="HourHand2" CenterX="1" CenterY="15" Angle="{Binding Source={Service ScreenManager},Path=Utils.HourAngle}">
                  </RotateTransform>
                </Rectangle.RenderTransform>
              </Rectangle>

              <Rectangle x:Name="MinuteHand" Canvas.Top="3" Canvas.Left="24.5" Fill="Black" Width="1" Height="22.5">
                <Rectangle.RenderTransform>
                  <RotateTransform CenterX="0.5" CenterY="22.5" Angle="{Binding Source={Service ScreenManager},Path=Utils.MinuteAngle}">
                  </RotateTransform>
                </Rectangle.RenderTransform>
              </Rectangle>
            </Canvas>
          </Grid>


        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
</ResourceDictionary>