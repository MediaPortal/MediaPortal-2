<?xml version="1.0" encoding="utf-8"?>
<!--
  Contains a default mapping of remote keys to MP2 keys.
  For each key mapping to be interpreted by MP2, there must be a MappedKeyCode element.
  The Code attribute contains the key name which comes from the IRSS server. The Key_Name attribute contains
  a reference to a MP2 key. The prefix (S: or P:) determines if the key is a special (S:) or printable (P:) key.
  The suffix is the special key name or the printable key's character.

  Each key code may only be mapped once (i.e. a key code given in the Code attribute may only be at most once).
  It is not necessary to add a MappedKeyCode entry for each IRSS key code, but it is recommended to do so. If a remote key
  should not be mapped to an MP2 key, the special key None (S:None) can be used.
-->
<ArrayOfMappedKeyCode xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <MappedKeyCode Code="Power" Key_Name="S:None" />

  <MappedKeyCode Code="Power2" Key_Name="S:Power" />
  <!-- 
  Default mapping: <MappedKeyCode Code="Back" Key_Name="S:Back" />
  -->
  <MappedKeyCode Code="Exit" Key_Name="S:Escape" />
  <MappedKeyCode Code="Select" Key_Name="S:Ok" />
  <MappedKeyCode Code="Start" Key_Name="S:Start" />

  <MappedKeyCode Code="RecordedTV" Key_Name="S:RecordedTV" />
  <MappedKeyCode Code="ElectronicProgramGuide" Key_Name="S:Guide" />
  <MappedKeyCode Code="LiveTV" Key_Name="S:LiveTV" />
  <MappedKeyCode Code="DVD" Key_Name="S:None" />

  <MappedKeyCode Code="VolumeUp" Key_Name="S:VolumeUp" />
  <MappedKeyCode Code="VolumeDown" Key_Name="S:VolumeDown" />
  <MappedKeyCode Code="Mute" Key_Name="S:Mute" />

  <!-- 
  Default mapping:  <MappedKeyCode Code="ChannelUp" Key_Name="S:ChannelUp" />
                    <MappedKeyCode Code="ChannelDown" Key_Name="S:ChannelDown" />
  -->
  <MappedKeyCode Code="ChannelUp" Key_Name="S:PageUp" />
  <MappedKeyCode Code="ChannelDown" Key_Name="S:PageDown" />

  <MappedKeyCode Code="Up" Key_Name="S:Up" />
  <MappedKeyCode Code="Down" Key_Name="S:Down" />
  <MappedKeyCode Code="Left" Key_Name="S:Left" />
  <MappedKeyCode Code="Right" Key_Name="S:Right" />
  <MappedKeyCode Code="DisplayInformation" Key_Name="S:Info" />

  <MappedKeyCode Code="Stop" Key_Name="S:Stop" />
  <MappedKeyCode Code="Pause" Key_Name="S:Pause" />
  <MappedKeyCode Code="Record" Key_Name="S:Record" />
  <MappedKeyCode Code="Play" Key_Name="S:Play" />
  <MappedKeyCode Code="Rewind" Key_Name="S:Rew" />
  <MappedKeyCode Code="FastForward" Key_Name="S:Fwd" />
  <MappedKeyCode Code="Backward" Key_Name="S:Previous" />
  <MappedKeyCode Code="Forward" Key_Name="S:Next" />

  <MappedKeyCode Code="Number0" Key_Name="P:0" />
  <MappedKeyCode Code="Number1" Key_Name="P:1" />
  <MappedKeyCode Code="Number2" Key_Name="P:2" />
  <MappedKeyCode Code="Number3" Key_Name="P:3" />
  <MappedKeyCode Code="Number4" Key_Name="P:4" />
  <MappedKeyCode Code="Number5" Key_Name="P:5" />
  <MappedKeyCode Code="Number6" Key_Name="P:6" />
  <MappedKeyCode Code="Number7" Key_Name="P:7" />
  <MappedKeyCode Code="Number8" Key_Name="P:8" />
  <MappedKeyCode Code="Number9" Key_Name="P:9" />

  <MappedKeyCode Code="Star" Key_Name="S:None" />
  <MappedKeyCode Code="Hash" Key_Name="S:None" />

  <MappedKeyCode Code="Clear" Key_Name="S:Clear" />
  <MappedKeyCode Code="Enter" Key_Name="S:Enter" />

  <MappedKeyCode Code="Teletext" Key_Name="S:TeleText" />

  <MappedKeyCode Code="F2Red" Key_Name="S:Red" />
  <MappedKeyCode Code="F3Green" Key_Name="S:Green" />
  <MappedKeyCode Code="F4Yellow" Key_Name="S:Yellow" />
  <MappedKeyCode Code="F1Blue" Key_Name="S:Blue" />

  <MappedKeyCode Code="Music" Key_Name="S:None" />
  <MappedKeyCode Code="Pictures" Key_Name="S:None" />
  <MappedKeyCode Code="Radio" Key_Name="S:None" />
  <MappedKeyCode Code="TV" Key_Name="S:None" />
  <MappedKeyCode Code="Videos" Key_Name="S:None" />
  <MappedKeyCode Code="Print" Key_Name="S:None" />
</ArrayOfMappedKeyCode>