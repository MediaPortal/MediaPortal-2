<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_nomenu.xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls;assembly=SkinEngine"
    xmlns:fanart="clr-namespace:MediaPortal.Extensions.UserServices.FanArtService.Client;assembly=FanArtService.Client"
    xmlns:tv="clr-namespace:MediaPortal.Plugins.SlimTv.Client.Controls;assembly=SlimTv.Client"
    >
  <Include.Resources>

    <!-- Custom margin that will be applied to the content area -->
    <ResourceWrapper x:Key="CustomContentMargin" Resource="30,110,0,0" />

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[SlimTvClient.Guide]"/>

    <!-- SlimTvClient model -->
    <Model x:Key="SlimTvMultiChannelGuide" Id="5054408D-C2A9-451f-A702-E84AFCD29C10"/>
    <Model x:Key="SlimTvSettings" Id="F5D4AA07-8469-46A7-8FD0-E1CD1E8F5898"/>
    <tv:SlimTvGuideTimeFormatConverter x:Key="SlimTvGuideTimeFormatConverter" />

    <ResourceWrapper x:Key="DynamicMultiGuideHeaderWidth" EnableBindings="True">
      <ResourceWrapper.Resource>
        <MultiBinding Converter="{StaticResource ExpressionMultiValueConverter}" ConverterParameter="{}({0} ? 90 : 0) + ({1} ? 160 : 0) + ({2} ? 200 : 0)">
          <Binding Source="{StaticResource SlimTvSettings}" Path="ShowChannelNumbers" />
          <Binding Source="{StaticResource SlimTvSettings}" Path="ShowChannelLogos" />
          <Binding Source="{StaticResource SlimTvSettings}" Path="ShowChannelNames" />
        </MultiBinding>
      </ResourceWrapper.Resource>
    </ResourceWrapper>

    <!-- Contents -->
    <ControlTemplate x:Key="Contents_Template">
      <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0"
            DataContext="{Binding Source={StaticResource SlimTvMultiChannelGuide}}">

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="{ThemeResource GroupButtonWidth}"/>
          <ColumnDefinition Width="{ThemeResource DynamicMultiGuideHeaderWidth}"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="TopGlow.png" Grid.ColumnSpan="4" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Stretch" 
               Height="20" Margin="0,-20,0,0"/>
        <Rectangle Fill="#D9000000" Grid.ColumnSpan="4" Grid.RowSpan="2" Margin="-40,0,-40,0" />
        <Image Source="BottomGlow.png" Grid.ColumnSpan="4" Grid.Row="1" Stretch="Fill" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
               Height="20" Margin="0,0,0,-20"/>

        <Label x:Name="Time" FontSize="{ThemeResource SmallFontSize}" VerticalAlignment="Center" Margin="20,2,10,0" FontFamily="SegoeUIBold"
               Content="{Binding Source={StaticResource TimeModel}, Path=CurrentTime}" Color="{ThemeResource TextColor}" Grid.ColumnSpan="2">
          <Label.Resources>
            <Model x:Key="TimeModel" Id="E821B1C8-0666-4339-8027-AA45A4F6F107"/>
          </Label.Resources>
        </Label>

        <Grid x:Name="EpgTimeGrid" Grid.Column="2" Grid.ColumnSpan="2" 
              Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,10,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <StackPanel x:Name="TimeControls" Margin="-35,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="ScrollDoubleBackwardButton" Style="{StaticResource ScrollDoubleLeftButtonStyle}" 
                    Command="{Command ScrollBackward}" Height="30" VerticalAlignment="Center" Margin="0,-1,2,1"/>
            <Button x:Name="ScrollBackwardButton" Style="{StaticResource SubMenuRightButtonStyle}" 
                    Command="{Command ScrollBackwardHalfScreen}" Height="30" VerticalAlignment="Center" Margin="0,-1,0,1"/>
            <Label Grid.Column="0" Content="{Binding Path=GuideStartTime, Converter={StaticResource SlimTvDateFormatConverter}}"
                   Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <Button x:Name="ScrollForwardButton" Style="{StaticResource SubMenuLeftButtonStyle}" 
                    Command="{Command ScrollForwardHalfScreen}" Height="30" VerticalAlignment="Center" Margin="0,-1,0,1"/>
            <Button x:Name="ScrollDoubleForwardButton" Style="{StaticResource ScrollDoubleRightButtonStyle}" 
                    Command="{Command ScrollForward}" Height="30" VerticalAlignment="Center" Margin="2,-1,0,1"/>
          </StackPanel>

          <Label Grid.Column="1" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"
                 VerticalAlignment="Center" Margin="7,0,0,0">
            <Label.Content>
              <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0.25">
                <Binding Path="GuideStartTime"/>
                <Binding Path="VisibleHours" />
              </MultiBinding>
            </Label.Content>
          </Label>
          <Label Grid.Column="2" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"
                 VerticalAlignment="Center" Margin="7,0,0,0">
            <Label.Content>
              <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0.5">
                <Binding Path="GuideStartTime"/>
                <Binding Path="VisibleHours" />
              </MultiBinding>
            </Label.Content>
          </Label>
          <Label Grid.Column="3" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"
                 VerticalAlignment="Center" Margin="7,0,0,0">
            <Label.Content>
              <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0.75">
                <Binding Path="GuideStartTime"/>
                <Binding Path="VisibleHours" />
              </MultiBinding>
            </Label.Content>
          </Label>
        </Grid>

        <tv:EpgGrid x:Name="EpgGrid" Style="{ThemeResource EpgGridStyle}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,5,0,20"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HeaderWidth="{StaticResource DynamicMultiGuideHeaderWidth}"/>

        <!-- All KeyBindings are included from shared resource -->
        <Include Source="screens\TvGuideKeybindings.inc"/>

        <Grid Grid.Row="1" Grid.ColumnSpan="4" Margin="40,0,0,-60" VerticalAlignment="Bottom" IsVisible="{Binding Source={StaticResource SkinSettingsModel}, Path=[Nereus].EnableHelpTexts}">
          <Grid x:Name="HelpText_DoubleArrow">
            <Grid.Triggers>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Binding="{Binding ElementName=ScrollDoubleBackwardButton,Path=HasFocus}" Value="False"/>
                  <Condition Binding="{Binding ElementName=ScrollDoubleForwardButton,Path=HasFocus}" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="HelpText_DoubleArrow" Property="IsVisible" Value="False"/>
              </MultiTrigger>
            </Grid.Triggers>
            <Image Source="HomeContentIcons\helptext.png" Height="26" Width="26" Stretch="Uniform" Margin="0,10,5,-5"
                   IsVisible="{Binding Converter={StaticResource EmptyStringToFalseConverter}, ElementName=HelpLabel, Path=Content}"
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="HelpLabel" Opacity="0.6" Margin="38,5,0,-5"
                   Content="Scroll time axis in day increments" Color="{ThemeResource TextColor}" Wrap="True" FontSize="{ThemeResource SmallerFontSize}"/>
          </Grid>

          <Grid x:Name="HelpText_Arrow">
            <Grid.Triggers>
              <MultiTrigger>
                <MultiTrigger.Conditions>
                  <Condition Binding="{Binding ElementName=ScrollBackwardButton,Path=HasFocus}" Value="False"/>
                  <Condition Binding="{Binding ElementName=ScrollForwardButton,Path=HasFocus}" Value="False"/>
                </MultiTrigger.Conditions>
                <Setter TargetName="HelpText_Arrow" Property="IsVisible" Value="False"/>
              </MultiTrigger>
            </Grid.Triggers>
            <Image Source="HomeContentIcons\helptext.png" Height="26" Width="26" Stretch="Uniform" Margin="0,10,5,-5"
                   IsVisible="{Binding Converter={StaticResource EmptyStringToFalseConverter}, ElementName=HelpLabel2, Path=Content}"
                   VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="HelpLabel2" Opacity="0.6" Margin="38,5,0,-5" Color="{ThemeResource TextColor}" Wrap="True" FontSize="{ThemeResource SmallerFontSize}">
              <Label.Content>
                <MultiBinding Converter="{StaticResource ExpressionMultiValueConverter}" ConverterParameter="{}{0}({1}/2){2}">
                  <Binding Source="Scroll time axis in " />
                  <Binding Path="VisibleHours" />
                  <Binding Source=" hour increments" />
                </MultiBinding>
              </Label.Content>
            </Label>
          </Grid>
        </Grid>

        <Grid x:Name="ProgramInfoPanel" Height="170" Margin="40,0,40,-190" Grid.Row="1" Grid.ColumnSpan="4" 
              HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
              DataContext="{Binding Source={StaticResource SlimTvMultiChannelGuide}}">
          <Grid.IsVisible>
            <MultiBinding Converter="{StaticResource ExpressionMultiValueConverter}" ConverterParameter="{} {0} &amp;&amp; {1} &amp;&amp; {2} &amp;&amp; {3} &amp;&amp; ({4}||{5})">
              <Binding ElementName="ScrollBackwardButton" Path="!HasFocus"/>
              <Binding ElementName="ScrollForwardButton" Path="!HasFocus"/>
              <Binding ElementName="ScrollDoubleBackwardButton" Path="!HasFocus"/>
              <Binding ElementName="ScrollDoubleForwardButton" Path="!HasFocus"/>
              <Binding ElementName="EpgGrid" Path="IsMouseOver"/>
              <Binding ElementName="EpgGrid" Path="IsKeyboardFocusWithin"/>
            </MultiBinding>
          </Grid.IsVisible>

          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="420"/>
            <ColumnDefinition Width="1400"/>
          </Grid.ColumnDefinitions>

          <StackPanel Orientation="Vertical" Grid.RowSpan="2">
            <!-- Common control for program duration formatting -->
            <Control Style="{StaticResource ProgramDurationControlStyle}" DataContext="{Binding Path=CurrentProgram}" />
            <Label x:Name="Channel" Scroll="Auto" Content="{Binding ChannelName}" Color="{ThemeResource TextColor}"
                   HorizontalAlignment="Left"/>
            <Image x:Name="ChannelLogo" Width="{ThemeResource ChannelLogoLarge}" Margin="0,10,0,0"
                   Stretch="Uniform" HorizontalAlignment="Left" VerticalAlignment="Top" >
              <Image.Source>
                <fanart:FanArtImageSource fanart:FanArtMediaType="{Binding ChannelLogoType}" fanart:FanArtType="Banner"
                                    fanart:FanArtName="{Binding ChannelName}" fanart:MaxWidth="0" fanart:MaxHeight="0"/>
              </Image.Source>
            </Image>
          </StackPanel>

          <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
            <Label x:Name="Program" Scroll="Auto" FontFamily="DefaultBold" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                   Content="{Binding CurrentProgram.Title}" Color="{ThemeResource TextColor}"/>    
            <Label x:Name="SeriesLabel" Color="{ThemeResource TextColor}" Margin="5,0,0,0" Opacity="0.6"
                   IsVisible="{Binding Path=CurrentProgram.Series, Converter={StaticResource EmptyStringToFalseConverter}}">
              <Label.Content>
                <Binding Path="CurrentProgram.Series" Converter="{StaticResource StringFormatConverter}" ConverterParameter="{} ({0})"/>
              </Label.Content>
            </Label>
          </StackPanel>

          <Label Grid.Row="1" Grid.Column="1" x:Name="Description" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                 Wrap="True" Scroll="Auto" Opacity="0.6" Content="{Binding Path=CurrentProgram.Description}"
                 ScrollSpeed="{Binding Source={StaticResource SkinSettingsModel}, Path=[Nereus].AutoScrollSpeed}"
                 ScrollDelay="{Binding Source={StaticResource SkinSettingsModel}, Path=[Nereus].AutoScrollDelay}"
                 Color="{ThemeResource TextColor}" Margin="0,0,0,-40"/>
        </Grid>

      </Grid>
    </ControlTemplate>

  </Include.Resources>
</Include>
