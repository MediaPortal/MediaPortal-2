<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master.xaml"
    >
  <Include.Resources>

    <!-- Header_Text -->
    <ResourceWrapper x:Key="Header_Text" Resource="[settings.tvsetup]"/>

    <!-- Client_Element -->
    <ResourceWrapper x:Key="Client_Element">
      <DockPanel>
        <Label Margin="60,0,0,0" Font="font13" Content="[settings.monitorarsetup]" Width="500" Height="32" DockPanel.Dock="Top"/>
        <StackPanel Margin="60,0,0,0" Width="280" DockPanel.Dock="Left"  VerticalAlignment="Top" HorizontalAlignment="Left" >
          <CheckBox  x:Name="mainMenu" Style="{StaticResource RadioButtonLeftStyle}" Height="32" >
            <Label Font="font13" Content="[settings.monitornormal]" />
          </CheckBox>
          <CheckBox  Style="{StaticResource RadioButtonLeftStyle}" Height="32" >
            <Label Font="font13"   Content="[settings.monitorwide]"  />
          </CheckBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
          <Button Style="{StaticResource ButtonStyle}" Width="160" Height="32" Command="{Command Source={Service ScreenManager},Path=ShowScreen,Parameters=settingsMonitorSetup}">
            <Label Font="font13" Content="[settings.back]" Height="32" />
          </Button>
          <Button Style="{StaticResource ButtonStyle}" Width="160" Height="32" Command="{Command Source={Service ScreenManager},Path=ShowScreen,Parameters="ettingsSkin}">
            <Label Font="font13" Content="[settings.finish]" Height="32" />
          </Button>
        </StackPanel>
      </DockPanel>
    </ResourceWrapper>

  </Include.Resources>
</Include>
