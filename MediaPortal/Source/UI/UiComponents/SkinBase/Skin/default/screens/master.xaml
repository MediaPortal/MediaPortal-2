<?xml version="1.0" encoding="utf-8"?>

<!--
This is the master template for all screens:
A header text and a client area.

Usage:

  <Include
      xmlns="www.team-mediaportal.com/2008/mpf/directx"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Source="screens\master.xaml">
    <Include.Resources>
      <ResourceWrapper x:Key="Header_Text">
        [Header text]
      </ResourceWrapper>
      <ResourceWrapper x:Key="Client_Element">
        [UI element to be displayed in the client area]
      </ResourceWrapper>
    </Include.Resources>
  </Include>

Parameters which have to be accessible by a DynamicResource lookup:
 - Header_Text (String): The text to be displayed as header
 - Client_Element (Any UI element): Element to be shown in the client area
-->

<Grid
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls"
    Context="{DynamicResource DataContext}">
  <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
  </Grid.RowDefinitions>
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <DockPanel Grid.Column="0" Grid.Row="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
      LastChildFill="True">
    <Grid x:Name="HeaderPanel" Margin="5" DockPanel.Dock="Top">
      <Grid.Resources>
        <Model x:Key="TimeModel" Id="E821B1C8-0666-4339-8027-AA45A4F6F107"/>
      </Grid.Resources>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <StackPanel x:Name="HeaderTextPanel" Orientation="Vertical" Grid.Column="0" Grid.Row="0" Margin="50,0,0,0">
        <Label x:Name="HeaderLabel"
            FontFamily="{ThemeResource HeaderFontFamily}" FontSize="{ThemeResource HeaderFontSize}"
            Color="{ThemeResource WindowHeaderColor}"
            Content="{Binding Source={DynamicResource Header_Text},Path=Resource}" />
        <Label x:Name="MirrorHeaderLabel"
            FontFamily="{ThemeResource HeaderFontFamily}" FontSize="{ThemeResource HeaderFontSize}"
            Color="{ThemeResource WindowHeaderColor}"
            Content="{Binding Source={DynamicResource Header_Text},Path=Resource}">
          <Label.LayoutTransform>
            <TransformGroup>
              <ScaleTransform ScaleX="1" ScaleY="-0.75"/>
            </TransformGroup>
          </Label.LayoutTransform>
          <Label.OpacityMask>
            <LinearGradientBrush StartPoint="0.5,0.0" EndPoint="0.5,1.0">
              <GradientStop Offset="0.0" Color="#00000000" />
              <GradientStop Offset="1.0" Color="#A0000000" />
            </LinearGradientBrush>
          </Label.OpacityMask>
        </Label>
      </StackPanel>
      <StackPanel x:Name="DateTimePanel" Margin="5" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top">
        <Label x:Name="Date" FontSize="{ThemeResource DateTimeFontSize}"
            HorizontalAlignment="Center"
            Content="{Binding Source={StaticResource TimeModel}, Path=CurrentDate}" />
        <Label x:Name="Time" FontSize="{ThemeResource DateTimeFontSize}"
            HorizontalAlignment="Center"
            Content="{Binding Source={StaticResource TimeModel}, Path=CurrentTime}" />
      </StackPanel>
    </Grid>
    <mp_special_controls:WorkflowNavigationBar DockPanel.Dock="Top" Style="{ThemeResource WorkflowNavigationBarStyle}"/>
  
<!-- Not sure if and how we should show shortcuts...
    <ListView x:Name="KeyBindingControls" DockPanel.Dock="Bottom" Style="{ThemeResource KeyBindingsListViewStyle}"
        Height="100" ItemsSource="{DynamicResource KeyBindingControls}"/>
-->
  
    <!-- Order matters here: The client content presenter has to be the last control (LastChildFill) -->
    <ContentPresenter x:Name="ClientPresenter" DockPanel.Dock="Center" SetFocus="true"
        Content="{DynamicResource Client_Element}"/>
  </DockPanel>
</Grid>