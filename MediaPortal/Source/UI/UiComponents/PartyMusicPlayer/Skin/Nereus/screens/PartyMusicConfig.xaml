<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls;assembly=SkinEngine"
    xmlns:mp_special_workflow="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Workflow;assembly=SkinEngine"
    Source="screens\master_bare.xaml"
    >
  <Include.Resources>
    <Model x:Key="PartyMusicPlayerModel" Id="6B3B9024-5B7A-44C0-9B9A-C83FB49FB8D6"/>
    <ResourceWrapper x:Key="Client_Margin" Resource="40,0,40,0"/>
    <ResourceWrapper x:Key="Header_Text" Resource="[PartyMusicPlayer.ConfigScreenTitle]"/>

    <!-- Screen background -->
    <ControlTemplate x:Key="FanArtBackground_Template">
      <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image Stretch="Fill" Source="Background.png"/>
      </Grid>
    </ControlTemplate>

    <!-- Contents -->
    <ControlTemplate x:Key="Client_Template">
      <Grid DataContext="{Binding Source={StaticResource PartyMusicPlayerModel}}" Margin="0,0,0,-50">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="480"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="44"/>
          <RowDefinition Height="4"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.RowSpan="4" Source="ContentGlow.png" Stretch="Uniform" VerticalAlignment="Stretch" 
               HorizontalAlignment="Right" Margin="0,-122,-20,-230" RenderTransformOrigin="0.5,0.5">
          <Image.RenderTransform>
            <RotateTransform Angle="180"/>
          </Image.RenderTransform>
        </Image>
        <Border Grid.RowSpan="4" Margin="0,-92,0,-230" Background="Black" Opacity="1"/>

        <!-- Top Gradient Overlay-->
        <Border Grid.RowSpan="3"  HorizontalAlignment="Stretch" VerticalAlignment="Top" 
                Grid.ColumnSpan="2" BorderThickness="0" Height="100" Margin="0,-112,0,0">
          <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
              <GradientStop Color="#E6000000" Offset="0" />
              <GradientStop Color="#78000000" Offset="0.3" />
              <GradientStop Color="#46000000" Offset="0.45" />
              <GradientStop Color="#21000000" Offset="0.6" />
              <GradientStop Color="#0C000000" Offset="0.75" />
              <GradientStop Color="#01000000" Offset="0.87" />
              <GradientStop Color="#00000000" Offset="1" />
            </LinearGradientBrush>
          </Border.Background>
        </Border>

        <!-- Bottom Gradient Overlay-->
        <Border Grid.Row="3" Grid.RowSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
                Grid.ColumnSpan="2" BorderThickness="0" Height="100" Margin="0,0,0,-220">
          <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
              <GradientStop Color="#E6000000" Offset="1" />
              <GradientStop Color="#78000000" Offset="0.87" />
              <GradientStop Color="#46000000" Offset="0.75" />
              <GradientStop Color="#21000000" Offset="0.6" />
              <GradientStop Color="#0C000000" Offset="0.45" />
              <GradientStop Color="#01000000" Offset="0.3" />
              <GradientStop Color="#00000000" Offset="0" />
            </LinearGradientBrush>
          </Border.Background>
        </Border>

        <!-- Category Icon -->
        <Grid x:Name="IconPanel" Grid.Row="1" Grid.RowSpan="3"  HorizontalAlignment="Stretch" Margin="30,0,0,-205" VerticalAlignment="Bottom">
          <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Image x:Name="ItemImage" Width="240" Height="240" Stretch="Fill" Opacity="0.8" HorizontalAlignment="Left" Source="HomeMenu\E00B8442-8230-4D7B-B871-6AC77755A0D5.png"/>
          <Label Grid.Row="1" MaxWidth="1400" Margin="0,10,10,10" VerticalAlignment="Bottom" Wrap="True" HorizontalAlignment="Stretch" Width="420"
                 Content="[PartyMusicPlayer.ConfigScreenTitle]" Color="White" Opacity="0.2" FontSize="{ThemeResource NormalFontSize}"/>
        </Grid>

        <!-- Contents Area-->
        <StackPanel Orientation="Horizontal" Grid.Column="1">
          <Image Source="playlist.png" Margin="30,8,5,3" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Left"
                 IsVisible="{Binding Converter={StaticResource ReferenceToBoolConverter}}" Width="40"/>
          <Label Content="[PartyMusicPlayer.Playlist]" VerticalAlignment="Center" HorizontalAlignment="Left" 
                 FontSize="{ThemeResource SmallFontSize}" Color="{ThemeResource TextColor}"/>
        </StackPanel>

        <Border Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="35,0,30,0" Background="White" BorderThickness="0"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" Margin="30,30,20,10">
          <DockPanel LastChildFill="False">
            <Button Content="[PartyMusicPlayer.ChoosePlaylist]" DockPanel.Dock="Left" VerticalAlignment="Center"
                    Command="{Command ChoosePlaylist}" Style="{ThemeResource WizardButtonStyle}"/>
            <Label Content="{Binding PlaylistName}" Color="{ThemeResource TextColor}" Margin="10,0,0,0" VerticalAlignment="Center"
                   DockPanel.Dock="Left"/>
          </DockPanel>
  
          <CheckBox x:Name="UseEscapePasswordCheckBox" Content="[PartyMusicPlayer.UseEscapePassword]"
                    Margin="0,10,10,0" IsChecked="{Binding Path=UseEscapePassword,Mode=TwoWay}"/>

          <Grid Margin="50,10,10,10">
            <Grid.RowDefinitions>
              <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBox Text="{Binding Path=EscapePassword,Mode=TwoWay}" PreferredTextLength="40" IsEnabled="{Binding UseEscapePassword}" Style="{ThemeResource PasswordTextBoxStyle}"/>
            <Image x:Name="editsymbol" Source="keyboard.png" VerticalAlignment="Center" HorizontalAlignment="Right" Opacity="0.5"
                   Stretch="Uniform" Height="30" Margin="0,0,15,0"/>
            <Grid.Triggers>
              <Trigger Property="IsKeyboardFocusWithin" Value="True">
                <Setter TargetName="editsymbol" Property="Opacity" Value="1"/>
              </Trigger>
            </Grid.Triggers>
          </Grid>
  
          <CheckBox x:Name="DisableScreenSaverCheckBox" Content="[PartyMusicPlayer.DisableScreenSaver]"
                    Margin="0,10,10,0" IsChecked="{Binding Path=DisableScreenSaver,Mode=TwoWay}"/>
        </StackPanel>

        <Button x:Name="StartPartyMode" Content="[PartyMusicPlayer.StartPartyMode]" Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Command="{Command StartPartyMode}" Style="{ThemeResource WizardButtonStyle}"/>
      </Grid>
    </ControlTemplate>
  </Include.Resources>
</Include>
