<?xml version="1.0" encoding="utf-8"?>

 <!-- DataContext = Player Model -->
 <Grid
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Model Id=A2F24149-B44C-498b-AE93-288213B87A1A}}"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">
  <Grid.ColumnDefinitions>
    <ColumnDefinition Width="*"/>
    <ColumnDefinition Width="Auto"/>
    <ColumnDefinition Width="*"/>
  </Grid.ColumnDefinitions>
  <Grid.RowDefinitions>
    <RowDefinition Height="*"/>
    <RowDefinition Height="Auto"/>
    <RowDefinition Height="30"/>
  </Grid.RowDefinitions>
  <Grid.Resources>
    <Style x:Key="ButtonPauseStyle" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid Width="32" Height="32">
              <Canvas IsVisible="{Binding Path=!IsPaused}">
                <Image x:Name="imgFocus1" Source="osd_pause_focus.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
                <Image x:Name="imgNoFocus1" Source="osd_pause_nofocus.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              </Canvas>
              <Canvas IsVisible="{Binding Path=IsPaused}">
                <Image x:Name="imgFocus2" Source="play_enabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
                <Image x:Name="imgNoFocus2" Source="play_disabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              </Canvas>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="HasFocus" Value="True">
                <Setter TargetName="imgFocus1" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgFocus2" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus1" Property="Visibility" Value="Hidden" />
                <Setter TargetName="imgNoFocus2" Property="Visibility" Value="Hidden" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="ButtonStopStyle" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid>
              <Image x:Name="imgFocus3" Source="stop_enabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              <Image x:Name="imgNoFocus3" Source="stop_disabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="HasFocus" Value="True">
                <Setter TargetName="imgFocus3" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus3" Property="Visibility" Value="Hidden" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="ButtonRewindStyle" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid>
              <Image x:Name="imgFocus4" Source="rew_enabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              <Image x:Name="imgNoFocus4" Source="rew_disabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="HasFocus" Value="True">
                <Setter TargetName="imgFocus4" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus4" Property="Visibility" Value="Hidden" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="ButtonForwardStyle" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid>
              <Image x:Name="imgFocus5" Source="fastforward_enabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              <Image x:Name="imgNoFocus5" Source="fastforward_disabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="HasFocus" Value="True">
                <Setter TargetName="imgFocus5" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus5" Property="Visibility" Value="Hidden" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
    <Style x:Key="ButtonMuteStyle" TargetType="{x:Type Button}">
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate>
            <Grid Width="32" Height="32">
              <Canvas IsVisible="{Binding Path=IsMuted}">
                <Image x:Name="imgFocus6" Source="mute_Offenabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
                <Image x:Name="imgNoFocus6" Source="mute_Offdisabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              </Canvas>
              <Canvas IsVisible="{Binding Path=!IsMuted}">
                <Image x:Name="imgFocus7" Source="mute_enabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
                <Image x:Name="imgNoFocus7" Source="mute_disabled.png" Stretch="Uniform" Margin="-10,0,0,0" Width="32" Height="32"/>
              </Canvas>
            </Grid>
            <ControlTemplate.Triggers>
              <Trigger Property="HasFocus" Value="True">
                <Setter TargetName="imgFocus6" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus6" Property="Visibility" Value="Hidden" />
                <Setter TargetName="imgFocus7" Property="Visibility" Value="Visible" />
                <Setter TargetName="imgNoFocus7" Property="Visibility" Value="Hidden" />
              </Trigger>
            </ControlTemplate.Triggers>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
    </Style>
  </Grid.Resources>

  <Image Grid.Row="1" Grid.Column="1" Source="osd_background.png" Height="10" Width="198" Stretch="Uniform"
      VerticalAlignment="Center" HorizontalAlignment="Center"/>
  <Canvas Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
    <Button Style="{StaticResource ButtonRewindStyle}" Canvas.Left="0" Canvas.Top="0" Command="{Command Path=Rewind}"/>
    <Button Style="{StaticResource ButtonStopStyle}" Canvas.Left="34" Canvas.Top="0" Command="{Command Path=Stop}"/>
    <Button Style="{StaticResource ButtonPauseStyle}" Canvas.Left="68" Canvas.Top="0" Command="{Command Path=TogglePause}"/>
    <Button Style="{StaticResource ButtonForwardStyle}" Canvas.Left="102" Canvas.Top="0" Command="{Command Path=Forward}"/>
    <Button Style="{StaticResource ButtonMuteStyle}"  Canvas.Left="136" Canvas.Top="0" Command="{Command Path=ToggleMute}"/>
  </Canvas>
</Grid>
