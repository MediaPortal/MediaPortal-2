<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

  <Style x:Key="Style_button_pause" TargetType="{x:Type Button}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Grid Width="32" Height="32">
            <Canvas IsVisible="{Binding Source={Service Players},Path=!Paused}">
              <Image x:Name="imgFocus1" Source="osd_pause_focus.png" Margin="-10,0,0,0"  Width="32" Height="32"/>
              <Image x:Name="imgNoFocus1" Source="osd_pause_nofocus.png"  Margin="-10,0,0,0" Width="32" Height="32"/>
            </Canvas>
            <Canvas IsVisible="{Binding Source={Service Players},Path=Paused}">
              <Image x:Name="imgFocus2" Source="play_enabled.png" Margin="-10,0,0,0"  Width="32" Height="32"/>
              <Image x:Name="imgNoFocus2" Source="play_disabled.png" Margin="-10,0,0,0" Width="32" Height="32"/>
            </Canvas>
          </Grid>
          <ControlTemplate.Triggers>
            <Trigger Property="HasFocus" Value="True">
              <Setter TargetName="imgFocus1" Property="Visibility" Value="Visible" />
              <Setter TargetName="imgFocus2" Property="Visibility" Value="Visible" />
              <Setter TargetName="imgNoFocus1" Property="Visibility" Value="Hidden" />
              <Setter TargetName="imgNoFocus2" Property="Visibility" Value="Hidden" />
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>
