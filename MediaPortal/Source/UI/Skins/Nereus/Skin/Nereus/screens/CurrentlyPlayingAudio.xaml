                  <media:AudioAspectWrapper.Template>
                    <ControlTemplate>
                      <ListView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10"
                                Style="{ThemeResource PersonCPListViewStyle}"
                                ItemsSource="{TemplateBinding Artists}"/>
                    </ControlTemplate>
                  </media:AudioAspectWrapper.Template>
