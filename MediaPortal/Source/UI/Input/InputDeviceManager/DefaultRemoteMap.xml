<?xml version="1.0" encoding="utf-8"?>
<!--
  Contains a default mapping of remote keys to MP2 keys.
  For each key mapping to be interpreted by MP2, there must be a RemoteKeyCode element.
  The Code attribute contains the code representing the key pressed. The Func_Name attribute contains
  a reference to a MP2 key or secreen. The prefix (S: or P:) determines if the key is a special (S:) or printable (P:) key.
  The suffix is the special key name or the printable key's character. The prefix (Home: or Config:) determines if the 
  screen is a home (Home:) or configuration (Config:) screen. The suffix is the name of the screen.

  Each key code may only be mapped once (i.e. a key code given in the Code attribute may only be at most once).
  It is not necessary to add a RemoteKeyCode entry for each key code, but it is recommended to do so. If a remote key
  should not be mapped to an MP2 key, the special key None (S:None) can be used.
-->
<ArrayOfRemoteKeyCode xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <RemoteKeyCode Code="101" Func_Name="S:Power" />
  <!-- Default mapping: 
  <RemoteKeyCode Code="35" Func_Name="S:Back" />
  -->
  <RemoteKeyCode Code="35" Func_Name="S:Escape" />
  <!-- Unmappable, handled by OS
  <RemoteKeyCode Code="34" Func_Name="S:Ok" />
  -->
  <RemoteKeyCode Code="13" Func_Name="S:Start" />

  <RemoteKeyCode Code="72" Func_Name="S:RecordedTV" />
  <RemoteKeyCode Code="38" Func_Name="S:Guide" />
  <RemoteKeyCode Code="37" Func_Name="S:LiveTV" />
  <RemoteKeyCode Code="36" Func_Name="S:DVDMenu" />

  <RemoteKeyCode Code="16" Func_Name="S:VolumeUp" />
  <RemoteKeyCode Code="17" Func_Name="S:VolumeDown" />
  <RemoteKeyCode Code="14" Func_Name="S:Mute" />

  <!-- Default mapping:  
  <RemoteKeyCode Code="18" Func_Name="S:ChannelUp" />
  <RemoteKeyCode Code="19" Func_Name="S:ChannelDown" />
  -->
  <RemoteKeyCode Code="18" Func_Name="S:PageUp" />
  <RemoteKeyCode Code="19" Func_Name="S:PageDown" />

  <!-- Unmappable, handled by OS
  <RemoteKeyCode Code="30" Func_Name="S:Up" />
  <RemoteKeyCode Code="31" Func_Name="S:Down" />
  <RemoteKeyCode Code="32" Func_Name="S:Left" />
  <RemoteKeyCode Code="33" Func_Name="S:Right" />
  -->
  <RemoteKeyCode Code="15" Func_Name="S:Info" />

  <RemoteKeyCode Code="25" Func_Name="S:Stop" />
  <RemoteKeyCode Code="24" Func_Name="S:Pause" />
  <RemoteKeyCode Code="23" Func_Name="S:Record" />
  <RemoteKeyCode Code="22" Func_Name="S:Play" />
  <RemoteKeyCode Code="21" Func_Name="S:Rew" />
  <RemoteKeyCode Code="20" Func_Name="S:Fwd" />

  <!-- Unmappable, handled by OS
  <RemoteKeyCode Code="27" Func_Name="S:Previous" />
  <RemoteKeyCode Code="26" Func_Name="S:Next" />
  <RemoteKeyCode Code="0" Func_Name="P:0" />
  <RemoteKeyCode Code="1" Func_Name="P:1" />
  <RemoteKeyCode Code="2" Func_Name="P:2" />
  <RemoteKeyCode Code="3" Func_Name="P:3" />
  <RemoteKeyCode Code="4" Func_Name="P:4" />
  <RemoteKeyCode Code="5" Func_Name="P:5" />
  <RemoteKeyCode Code="6" Func_Name="P:6" />
  <RemoteKeyCode Code="7" Func_Name="P:7" />
  <RemoteKeyCode Code="8" Func_Name="P:8" />
  <RemoteKeyCode Code="9" Func_Name="P:9" />

  <RemoteKeyCode Code="10" Func_Name="S:Clear" />
  <RemoteKeyCode Code="11" Func_Name="S:Enter" />
  -->

  <RemoteKeyCode Code="90" Func_Name="S:TeleText" />

  <RemoteKeyCode Code="91" Func_Name="S:Red" />
  <RemoteKeyCode Code="92" Func_Name="S:Green" />
  <RemoteKeyCode Code="93" Func_Name="S:Yellow" />
  <RemoteKeyCode Code="94" Func_Name="S:Blue" />

  <!-- Music -->
  <RemoteKeyCode Code="71" Func_Name="Home.Home-&gt;Audio" />
  <!-- Pictures -->
  <RemoteKeyCode Code="73" Func_Name="Home.Home-&gt;Images" />
  <!-- Radio -->
  <RemoteKeyCode Code="80" Func_Name="Home.Home-&gt;SlimTvClient" />
  <!-- TV -->
  <RemoteKeyCode Code="70" Func_Name="Home.Home-&gt;SlimTvClient" />
  <!-- Videos -->
  <RemoteKeyCode Code="74" Func_Name="Home.Home-&gt;Videos" />
</ArrayOfRemoteKeyCode>
