<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

  <!-- General font sizes -->
  <ResourceWrapper x:Key="HugeFontSize" Resource="54"/>
  <ResourceWrapper x:Key="BigFontSize" Resource="30"/>
  <ResourceWrapper x:Key="SmallFontSize" Resource="20"/>
  <ResourceWrapper x:Key="SmallerFontSize" Resource="18"/>
  <ResourceWrapper x:Key="LittleFontSize" Resource="12"/>
  <ResourceWrapper x:Key="TinyFontSize" Resource="9"/>

  <!-- Screen transitions -->  
  <ResourceWrapper x:Key="ScreenTransitionEndTime" Resource="00:00:00.15"/>
  <ResourceWrapper x:Key="DialogTransitionEndTime" Resource="00:00:00.15"/>

  <!-- Scroll bar -->  
  <ResourceWrapper x:Key="ScrollBarWidth" Resource="12"/>
  <ResourceWrapper x:Key="ScrollBarKnobWidth" Resource="12"/>
  
  <!-- Progress bar -->
  <ResourceWrapper x:Key="ProgressBarIndicatorMargin" Resource="0"/>
  <ResourceWrapper x:Key="ProgressBarRadius" Resource="0"/>

  <!-- Dialogs -->
  <ResourceWrapper x:Key="DialogTitleFontSize" Resource="30"/>
  <ResourceWrapper x:Key="DialogButtonMinWidth" Resource="200"/>
  <ResourceWrapper x:Key="DialogBorderCornerRadius" Resource="10"/>
  <ResourceWrapper x:Key="DialogCloseButtonFocusedAnimationTime1" Resource="00:00:00.2"/>

  <!-- Buttons -->
  <ResourceWrapper x:Key="FocusedButtonAnimationTime1" Resource="00:00:02"/>
  <ResourceWrapper x:Key="FocusedButtonAnimationTime2" Resource="00:00:04"/>
  <ResourceWrapper x:Key="FocusedButtonScaleAnimationTime1" Resource="00:00:00.1"/>
  <ResourceWrapper x:Key="PressedButtonAnimationTime1" Resource="00:00:00.2"/>
  <ResourceWrapper x:Key="PressedButtonAnimationTime2" Resource="00:00:00.4"/>
  <ResourceWrapper x:Key="PressedButtonScaleAnimationTime1" Resource="00:00:00.1"/>
  <ResourceWrapper x:Key="DisabledButtonScaleAnimationTime1" Resource="00:00:00.1"/>

  <ResourceWrapper x:Key="ButtonControlRadiusX" Resource="4"/>
  <ResourceWrapper x:Key="ButtonControlRadiusY" Resource="4"/>
  <ResourceWrapper x:Key="RadioButtonControlRadiusX" Resource="5"/>
  <ResourceWrapper x:Key="RadioButtonControlRadiusY" Resource="5"/>
  <ResourceWrapper x:Key="RadioButtonControlWidth" Resource="18"/>
  <ResourceWrapper x:Key="RadioButtonControlHeight" Resource="18"/>

  <ResourceWrapper x:Key="CheckBoxControlWidth" Resource="26"/>
  <ResourceWrapper x:Key="CheckBoxControlHeight" Resource="26"/>

  <!-- Text boxes -->
  <ResourceWrapper x:Key="TextBoxBorderThickness" Resource="3"/>
  <ResourceWrapper x:Key="TextBoxCornerRadius" Resource="2"/>

  <!-- Virtual keyboard -->
  <ResourceWrapper x:Key="VirtualKeyboardBorderThickness" Resource="10"/>
  <ResourceWrapper x:Key="VirtualKeyboardCornerRadius" Resource="10"/>

  <!-- Content group box -->
  <ResourceWrapper x:Key="ContentGroupBoxCornerRadius" Resource="15"/>

  <!-- Player control -->
  <ResourceWrapper x:Key="DefaultPlayerControlBorderThickness" Resource="1"/>
  <ResourceWrapper x:Key="DefaultPlayerControlCornerRadius" Resource="4"/>
  <ResourceWrapper x:Key="OSDPlayControlBorderThickness" Resource="1"/>
  <ResourceWrapper x:Key="OSDPlayControlCornerRadius" Resource="8"/>
  <ResourceWrapper x:Key="PlayerControlFontSize" Resource="{ThemeResource SmallFontSize}"/>

  <!-- PiP -->
  <ResourceWrapper x:Key="PipBorderThickness" Resource="2"/>
  <ResourceWrapper x:Key="PiPVideoWidth" Resource="330"/>
  <ResourceWrapper x:Key="PressedPiPOSDButtonAnimationTime1" Resource="00:00:00.1"/>
  <ResourceWrapper x:Key="PressedPiPOSDButtonAnimationTime2" Resource="00:00:01"/>

  <!-- OSD current player control -->  
  <ResourceWrapper x:Key="OSDCurrentPlayerControlAnimationTime1" Resource="00:00:00.4"/>
  <ResourceWrapper x:Key="OSDCurrentPlayerControlAnimationTime2" Resource="00:00:00.8"/>

  <!-- Small OSD buttons -->
  <ResourceWrapper x:Key="OSDControlWidth" Resource="18" />
  <ResourceWrapper x:Key="OSDControlMargin" Resource="8,4,8,4" />

  <!-- Workflow navigation bar -->
  <ResourceWrapper x:Key="WorkflowNavigationBarFocusTime" Resource="00:00:00.2"/>

  <!-- Master_Bare layout -->
  <ResourceWrapper x:Key="HeaderPanelHeight" Resource="135" />
  <ResourceWrapper x:Key="FooterPanelHeight" Resource="100" />

</ResourceDictionary>
