<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >
  <ResourceWrapper x:Key="HomeNonFocusedColor" Resource="#6B6A6A"/>

  <!-- Button background and effects-->
  <ResourceWrapper x:Key="ButtonGradient1Color" Resource="#000F3369"/>

  <ResourceWrapper x:Key="ButtonGradient2Color" Resource="#00050F20"/>

  <ResourceWrapper x:Key="FocusedButtonGradient1Color" Resource="#FF0F3369"/>

  <ResourceWrapper x:Key="FocusedButtonGradient2Color" Resource="#FF050F20"/>

  <ResourceWrapper x:Key="FocusedButtonGradient3Color" Resource="#FF050F20"/>

  <ResourceWrapper x:Key="FocusedButtonGradientLightColor" Resource="#FF0F3369"/>

  <ResourceWrapper x:Key="FocusedButtonGradientDarkColor" Resource="#FF050F20"/>

  <ResourceWrapper x:Key="ButtonStrokeColor" Resource="#00000000"/>

  <ResourceWrapper x:Key="FocusedButtonGradientLighterColor" Resource="#FF959595"/>

  <ResourceWrapper x:Key="PressedButtonGradientLight1Color" Resource="#FFB0B0B0"/>

  <ResourceWrapper x:Key="PressedButtonGradientLight2Color" Resource="#FFA0A0A0"/>

  <ResourceWrapper x:Key="PressedButtonGradientDark1Color" Resource="#FF808080"/>

  <ResourceWrapper x:Key="PressedButtonGradientDark2Color" Resource="#FF404040"/>

  <ResourceWrapper x:Key="HighlightButtonStrokeColor" Resource="#FFFFFF"/>

  <!-- Colors and gradients used for buttons shine and OSD progress / control area -->
  <ResourceWrapper x:Key="ShineGradientStartColor" Resource="#FFA0C0FF" />
  <ResourceWrapper x:Key="ShineGradientEndColor" Resource="#00A0C0FF" />

  <ResourceWrapper x:Key="ButtonBackgroundFill" Resource="#80000000"/>
  <ResourceWrapper x:Key="ButtonBackgroundDisabledFill" Resource="#F0101010"/>
  <ResourceWrapper x:Key="ButtonBackgroundFocusFill" Resource="#70136D96"/>

  <!-- Player control -->
  <ResourceWrapper x:Key="PlayerControlMediaItemColor" Resource="#FF262626"/>
  <ResourceWrapper x:Key="PlayerControlBackgroundColor" Resource="#FFD0CEA8"/>
  <ResourceWrapper x:Key="PlaybackControlsBackgroundColor" Resource="#FF1E1E1E"/>
  <ResourceWrapper x:Key="CurrentPlayerControlBackgroundColor1" Resource="#FFDCD9D9"/>
  <ResourceWrapper x:Key="CurrentPlayerControlBackgroundColor2" Resource="#FF1B7EE6"/>
  <ResourceWrapper x:Key="CurrentPlayerControlBackgroundColor3" Resource="#001B7EE6"/>

  <!-- Text colors -->
  <ResourceWrapper x:Key="WatchedTextColor" Resource="#00A7FF"/>

  <ResourceWrapper x:Key="EmphasisTextColor" Resource="#D1FFED"/>

  <!-- Semi transparent black used to darken the background when showing a dialog -->
  <ResourceWrapper x:Key="DialogScreenBackgroundColor">
    <RadialGradientBrush GradientOrigin="0.5,0.5">
      <GradientStop Color="#FF000000" Offset="0"/>
      <GradientStop Color="#C0000000" Offset="0.3"/>
      <GradientStop Color="#80000000" Offset="1"/>
    </RadialGradientBrush>
  </ResourceWrapper>

  <!-- Scrollbar colors -->
  <ResourceWrapper x:Key="ScrollBarBackgroundColor">
    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
      <GradientStop Color="#00404040" Offset="0"/>
      <GradientStop Color="{ThemeResource HomeNonFocusedColor}" Offset="0.40"/>
      <GradientStop Color="{ThemeResource HomeNonFocusedColor}" Offset="0.60"/>
      <GradientStop Color="#00404040" Offset="1"/>
    </LinearGradientBrush>
  </ResourceWrapper>

  <ResourceWrapper x:Key="ScrollBarBackgroundXColor">
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
      <GradientStop Color="#00404040" Offset="0"/>
      <GradientStop Color="{ThemeResource HomeNonFocusedColor}" Offset="0.40"/>
      <GradientStop Color="{ThemeResource HomeNonFocusedColor}" Offset="0.60"/>
      <GradientStop Color="#00404040" Offset="1"/>
    </LinearGradientBrush>
  </ResourceWrapper>

  <ResourceWrapper x:Key="ProgressBarBackgroundColor" Resource="#A5A5A5" />
  <ResourceWrapper x:Key="ProgressBarFillColor" Resource="#FF4780A0" />

  <ResourceWrapper x:Key="OSDProgressBarFillColor">
    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
      <GradientStop Color="#00404040" Offset="0"/>
      <GradientStop Color="#FF4780A0" Offset="0.60"/>
      <GradientStop Color="#FF4780A0" Offset="1"/>
    </LinearGradientBrush>
  </ResourceWrapper>

  <ResourceWrapper x:Key="ScrollBarKnobStrokeColor" Resource=""/>

  <ResourceWrapper x:Key="ScrollBarStrokeColor" Resource=""/>

  <ResourceWrapper x:Key="ScrollBarKnobBackgroundColor" Resource="#DFE0E2" />

  <ResourceWrapper x:Key="ScrollBarWidth" Resource="1"/>

  <ResourceWrapper x:Key="ScrollBarKnobWidth" Resource="18"/>

  <!-- Star Rating -->
  <ResourceWrapper x:Key="StarRatingSelectedColor" Resource="#E8E8E8"/>

</ResourceDictionary>
