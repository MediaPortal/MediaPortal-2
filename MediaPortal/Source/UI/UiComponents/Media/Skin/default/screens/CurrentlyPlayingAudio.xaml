<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_menu.xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls"
    >
  <Include.Resources>

    <ResourceWrapper x:Key="Header_Text" Resource="[Media.AudioCurrentlyPlayingHeader]"/>

    <ResourceWrapper x:Key="Contents_Element">
      <GroupBox Header="[Media.AudioCurrentlyPlayingInformationHeader]" Style="{ThemeResource ContentGroupBoxStyle}">
        <DockPanel x:Name="RightPanel" Margin="20" LastChildFill="true">
          <DockPanel.Context>
            <mp_special_controls:PlayerControl
                SlotIndex="{Binding Source={Model Id=D8998340-DA2D-42be-A29B-6D7A72AEA2DC},Path=CurrentPlayerIndex}"/>
                <!-- Model = Audio player model -->
          </DockPanel.Context>
          <Grid DockPanel.Dock="Top"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
              <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto"/>
              <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="ArtistLabel" Grid.Row="0" Grid.Column="0" Content="[Media.AudioArtistLabel]"/>
            <Label x:Name="Artist" Grid.Row="0" Grid.Column="1" Content="{Binding AudioArtist}"/>
            <Label x:Name="TitleLabel" Grid.Row="1" Grid.Column="0" Content="[Media.AudioTitleLabel]"/>
            <Label x:Name="Title" Grid.Row="1" Grid.Column="1" Scroll="true" Content="{Binding MediaItemTitle}"/>
            <Label x:Name="YearLabel" Grid.Row="2" Grid.Column="0" Content="[Media.AudioYearLabel]"/>
            <Label x:Name="Year" Grid.Row="2" Grid.Column="1" Content="{Binding AudioYear}"/>
            <Label x:Name="DurationLabel" Grid.Row="3" Grid.Column="0" Content="[Media.AudioDurationLabel]"/>
            <Label x:Name="Duration" Grid.Row="3" Grid.Column="1" Content="{Binding Duration}"/>
          </Grid>
        </DockPanel>
      </GroupBox>
    </ResourceWrapper>

  </Include.Resources>
</Include>
