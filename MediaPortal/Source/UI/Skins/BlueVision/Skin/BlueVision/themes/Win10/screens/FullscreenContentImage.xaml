<?xml version="1.0" encoding="utf-8"?>
<Screen
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls;assembly=SkinEngine"
    xmlns:mp_special_workflow="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Workflow;assembly=SkinEngine"
    mp_special_workflow:WorkflowContext.StateSlot="Root"
    x:Name="FullscreenContentImageScreen"
    >
  <Grid x:Name="FullscreenLayoutGrid" Context="{Model Id=4E2301B4-3C17-4a1d-8DE5-2CEA169A0256}"> <!-- Model = VideoPlayer model -->
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="180"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="100"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <mp_special_controls:PlayerControl x:Name="FullscreenImage"  Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Grid.ColumnSpan="3"
        VerticalAlignment="Stretch" HorizontalAlignment="Stretch" PlayerContext="PrimaryPlayer">
      <mp_special_controls:PlayerControl.TemplateControl>
        <Image Stretch="Uniform" DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}" SkinNeutralAR="True">
          <Image.Source>
            <ImagePlayerImageSource Stream="0"
                Transition="transitions\granular_dissolve;transitions\fade;transitions\dissolve;transitions\wipe_right;transitions\wipe_down;transitions\wipe_down-right;transitions\wipe_up-left"
                TransitionDuration="{Binding Source={Model Id=4E2301B4-3C17-4a1d-8DE5-2CEA169A0256},Path=PlayerUIContributor.TransitionDuration,Mode=OneWay}"
                TransitionInOut="False" />
          </Image.Source>
        </Image>
      </mp_special_controls:PlayerControl.TemplateControl>
    </mp_special_controls:PlayerControl>

    <Control x:Name="PiP" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Style="{ThemeResource PipControlStyle}" 
          IsVisible="{Binding !IsOSDVisible}"/>

    <DockPanel x:Name="OSD_RightPanel"  Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" LastChildFill="false" IsVisible="{Binding IsOSDVisible}">
      <mp_special_controls:PlayerControl x:Name="SecondaryOSD"
            Style="{ThemeResource SecondaryMediaOSDStyle}"
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
            AutoVisibility="true"/>
    </DockPanel>

    <mp_special_controls:PlayerControl x:Name="PrimaryOSD"  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" IsVisible="{Binding IsOSDVisible}"
            Style="{ThemeResource PrimaryImageOSDStyle}" Margin="0,0,-40,0"
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

    <Control x:Name="WindowButtons" Grid.Column="2" Grid.Row="0" Margin="-40,30,40,-30">
      <Control.TemplateControl>
        <Include Source="screens\FSCWindowButtons.inc"/>
      </Control.TemplateControl>
    </Control>
    
    <KeyBinding Key="Info" Command="{Command ShowVideoInfo}"/>
  </Grid>
</Screen>
