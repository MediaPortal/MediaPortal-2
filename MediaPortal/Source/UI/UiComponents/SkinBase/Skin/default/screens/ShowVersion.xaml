<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_dialog_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[Settings.General.System.Version]"/>

    <!-- HomeServerModel -->
    <Model x:Key="Model" Id="854ABA9A-71A1-420b-A657-9641815F9C01"/>

    <!-- Contents -->
    <ControlTemplate x:Key="Contents_Template">
      <Grid DataContext="{Binding Source={StaticResource Model}}">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="[Settings.General.System.Version.Help]" Color="{ThemeResource TextColor}" Margin="0,0,0,20"/>
        
        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" >
          <Label Content="Server version: " Color="{ThemeResource TextColor}"/>
          <Label Content="123456" Color="{ThemeResource TextColor}" IsVisible="{Binding IsHomeServerAttached}"/>
          <Label Content="[ServerConnection.NoHomeServerAttached]" Color="{ThemeResource TextColor}" IsVisible="{Binding !IsHomeServerAttached}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" >
          <Label Content="Client version: " Color="{ThemeResource TextColor}"/>
          <Label Content="123456" Color="{ThemeResource TextColor}"/>
        </StackPanel>
      </Grid>
    </ControlTemplate>

  </Include.Resources>
</Include>
