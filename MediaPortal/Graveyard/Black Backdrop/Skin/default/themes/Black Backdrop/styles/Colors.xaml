<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    >

  <!-- ************************** Changed colors from Black theme  ****************************** -->
  <ResourceWrapper x:Key="ButtonStrokeColor" Resource="#B0E0E0E0"/>
  <ResourceWrapper x:Key="ScrollBarWidth" Resource="12"/>

  <!-- Master screen colors -->
  <ResourceWrapper x:Key="HeaderPanelBackgroundBrush">
    <ResourceWrapper.Resource>
      <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
        <GradientStop Offset="0" Color="#FF000000"/>
        <GradientStop Offset="0.7" Color="#A0000000"/>
        <GradientStop Offset="1" Color="#50000000"/>
      </LinearGradientBrush >
    </ResourceWrapper.Resource>
  </ResourceWrapper>
  
  <ResourceWrapper x:Key="FooterPanelBackgroundBrush" Resource="{ThemeResource HeaderPanelBackgroundBrush}"/>
  
</ResourceDictionary>
