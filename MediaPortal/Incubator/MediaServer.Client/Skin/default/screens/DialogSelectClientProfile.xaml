<?xml version="1.0" encoding="utf-8"?>

<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\simple_dialog_menu.xaml"
    >
  <Include.Resources>
    <Service x:Key="ScreenManager" InterfaceName="ScreenManager"/>

    <!-- Dialog title -->
    <ResourceWrapper x:Key="Dialog_Header_Text" Resource="[Settings.DLNA.Clients.Config.SelectProfile]"/>

    <Model x:Key="Model" Id="A5E439BD-6A88-4B1B-9032-0C6F1CE9DD30"/>

    <ResourceWrapper x:Key="Menu_Items" EnableBindings="True"
        Resource="{Binding Source={StaticResource Model},Path=ProfileList,Mode=OneTime}"/>

    <!-- Command -->
    <CommandStencil x:Key="Execute_Command_Stencil"
        Source="{StaticResource Model}" Path="SelectProfile"/>
  </Include.Resources>
</Include>
