  <ResourceWrapper x:Key="UpperShineGradient">
    <ResourceWrapper.Resource>
      <LinearGradientBrush StartPoint="0.5,-0.3" EndPoint="0.5,0.4">
        <GradientStop Color="{StaticResource ShineGradientStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ShineGradientEndColor}" Offset="1"/>
      </LinearGradientBrush>
    </ResourceWrapper.Resource>
  </ResourceWrapper>

  <ResourceWrapper x:Key="LowerShineGradient">
    <ResourceWrapper.Resource>
      <LinearGradientBrush StartPoint="0.5, 1.2" EndPoint="0.5,0.85">
        <GradientStop Color="{StaticResource ShineGradientStartColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ShineGradientEndColor}" Offset="1"/>
      </LinearGradientBrush>
    </ResourceWrapper.Resource>
  </ResourceWrapper>

  <ResourceWrapper x:Key="UpperShineGradientAnimated">
    <ResourceWrapper.Resource>
      <LinearGradientBrush StartPoint="0.5,-0.3" EndPoint="0.5,0.4">
        <GradientStop Color="{StaticResource ShineGradientEndColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ShineGradientEndColor}" Offset="1"/>
      </LinearGradientBrush>
    </ResourceWrapper.Resource>
  </ResourceWrapper>

  <ResourceWrapper x:Key="LowerShineGradientAnimated">
    <ResourceWrapper.Resource>
      <LinearGradientBrush StartPoint="0.5, 1.2" EndPoint="0.5,0.85">
        <GradientStop Color="{StaticResource ShineGradientEndColor}" Offset="0"/>
        <GradientStop Color="{StaticResource ShineGradientEndColor}" Offset="1"/>
      </LinearGradientBrush>
    </ResourceWrapper.Resource>
  </ResourceWrapper>

