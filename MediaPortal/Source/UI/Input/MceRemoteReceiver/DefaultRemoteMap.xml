<?xml version="1.0" encoding="utf-8"?>
<!--
  Contains a default mapping of remote keys to MP2 keys.
  For each key mapping to be interpreted by MP2, there must be a MappedKeyCode element.
  The Code attribute contains the key name which comes from the IRSS server. The Key_Name attribute contains
  a reference to a MP2 key. The prefix (S: or P:) determines if the key is a special (S:) or printable (P:) key.
  The suffix is the special key name or the printable key's character.

  Each key code may only be mapped once (i.e. a key code given in the Code attribute may only be at most once).
  It is not necessary to add a MappedKeyCode entry for each IRSS key code, but it is recommended to do so. If a remote key
  should not be mapped to an MP2 key, the special key None (S:None) can be used.
-->
<ArrayOfMappedKeyCode xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <MappedKeyCode Code="101" Key_Name="S:Power" />
  <!-- 
  Default mapping: <MappedKeyCode Code="35" Key_Name="S:Back" />
  -->
  <MappedKeyCode Code="35" Key_Name="S:Escape" />
  <!-- Unmappable, handled by OS
  <MappedKeyCode Code="34" Key_Name="S:Ok" />
  -->
  <MappedKeyCode Code="13" Key_Name="S:Start" />

  <MappedKeyCode Code="72" Key_Name="S:RecordedTV" />
  <MappedKeyCode Code="38" Key_Name="S:Guide" />
  <MappedKeyCode Code="37" Key_Name="S:LiveTV" />
  <!-- DVD Menu -->
  <MappedKeyCode Code="36" Key_Name="S:None" />

  <MappedKeyCode Code="16" Key_Name="S:VolumeUp" />
  <MappedKeyCode Code="17" Key_Name="S:VolumeDown" />
  <MappedKeyCode Code="14" Key_Name="S:Mute" />

  <!-- 
  Default mapping:  <MappedKeyCode Code="18" Key_Name="S:ChannelUp" />
                    <MappedKeyCode Code="19" Key_Name="S:ChannelDown" />
  -->
  <MappedKeyCode Code="18" Key_Name="S:PageUp" />
  <MappedKeyCode Code="19" Key_Name="S:PageDown" />

  <!-- Unmappable, handled by OS
  <MappedKeyCode Code="30" Key_Name="S:Up" />
  <MappedKeyCode Code="31" Key_Name="S:Down" />
  <MappedKeyCode Code="32" Key_Name="S:Left" />
  <MappedKeyCode Code="33" Key_Name="S:Right" />
  -->
  <MappedKeyCode Code="15" Key_Name="S:Info" />

  <MappedKeyCode Code="25" Key_Name="S:Stop" />
  <MappedKeyCode Code="24" Key_Name="S:Pause" />
  <MappedKeyCode Code="23" Key_Name="S:Record" />
  <MappedKeyCode Code="22" Key_Name="S:Play" />
  <MappedKeyCode Code="21" Key_Name="S:Rew" />
  <MappedKeyCode Code="20" Key_Name="S:Fwd" />

  <!-- Unmappable, handled by OS
  <MappedKeyCode Code="27" Key_Name="S:Previous" />
  <MappedKeyCode Code="26" Key_Name="S:Next" />
  <MappedKeyCode Code="0" Key_Name="P:0" />
  <MappedKeyCode Code="1" Key_Name="P:1" />
  <MappedKeyCode Code="2" Key_Name="P:2" />
  <MappedKeyCode Code="3" Key_Name="P:3" />
  <MappedKeyCode Code="4" Key_Name="P:4" />
  <MappedKeyCode Code="5" Key_Name="P:5" />
  <MappedKeyCode Code="6" Key_Name="P:6" />
  <MappedKeyCode Code="7" Key_Name="P:7" />
  <MappedKeyCode Code="8" Key_Name="P:8" />
  <MappedKeyCode Code="9" Key_Name="P:9" />

  <MappedKeyCode Code="29" Key_Name="S:Star" />
  <MappedKeyCode Code="28" Key_Name="S:Hash" />

  <MappedKeyCode Code="10" Key_Name="S:Clear" />
  <MappedKeyCode Code="11" Key_Name="S:Enter" />
  -->

  <MappedKeyCode Code="90" Key_Name="S:TeleText" />

  <MappedKeyCode Code="91" Key_Name="S:Red" />
  <MappedKeyCode Code="92" Key_Name="S:Green" />
  <MappedKeyCode Code="93" Key_Name="S:Yellow" />
  <MappedKeyCode Code="94" Key_Name="S:Blue" />

  <!-- Music -->
  <MappedKeyCode Code="71" Key_Name="S:None" />
  <!-- Pictures -->
  <MappedKeyCode Code="73" Key_Name="S:None" />
  <!-- Radio -->
  <MappedKeyCode Code="80" Key_Name="S:None" />
  <!-- TV -->
  <MappedKeyCode Code="70" Key_Name="S:None" />
  <!-- Videos -->
  <MappedKeyCode Code="74" Key_Name="S:None" />
  <!-- AspectRatio -->
  <MappedKeyCode Code="39" Key_Name="S:None" />
  <!-- Print -->
  <MappedKeyCode Code="78" Key_Name="S:None" />
</ArrayOfMappedKeyCode>
