<?xml version="1.0" encoding="utf-8"?>
<Canvas
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Service Players}}"
    IsVisible="{Binding Path=OSD.IsMouseUsed}">

  <Image Source="osd_background.png" Canvas.Left="330" Canvas.Top="542" Height="10" Width="198" IsVisible="{Binding Path=OSD.IsVideo}"/>
  <Image Source="osd_background.png" Canvas.Left="330" Canvas.Top="542" Height="10" Width="198" IsVisible="{Binding Path=OSD.IsAudio}"/>
  <Canvas IsVisible="{Binding Path=OSD.IsMouseUsed}" Canvas.Left="350" Canvas.Top="530" >
    <Canvas IsVisible="{Binding Path=OSD.IsVideo}">
      <Button Style="{StaticResource Style_button_rewind}" Canvas.Left="0" Canvas.Top="0" Command="{Command Path=Rewind}"/>
      <Button Style="{StaticResource Style_button_stop}" Canvas.Left="34" Canvas.Top="0" Command="{Command Path=Stop}"/>
      <Button Style="{StaticResource Style_button_pause}" Canvas.Left="68" Canvas.Top="0" Command="{Command Path=TogglePause}"/>
      <Button Style="{StaticResource Style_button_forward}" Canvas.Left="102" Canvas.Top="0" Command="{Command Path=Forward}"/>
      <Button Style="{StaticResource Style_button_mute}"  Canvas.Left="136" Canvas.Top="0" Command="{Command Path=Mute}"/>
    </Canvas>
    <Canvas IsVisible="{Binding Path=OSD.IsAudio}">
      <Button Style="{StaticResource Style_button_rewind}" Canvas.Left="0" Canvas.Top="0" Command="{Command Path=Rewind}"/>
      <Button Style="{StaticResource Style_button_stop}" Canvas.Left="34" Canvas.Top="0" Command="{Command Path=Stop}"/>
      <Button Style="{StaticResource Style_button_pause}" Canvas.Left="68" Canvas.Top="0" Command="{Command Path=TogglePause}"/>
      <Button Style="{StaticResource Style_button_forward}" Canvas.Left="102" Canvas.Top="0" Command="{Command Path=Forward}"/>
      <Button Style="{StaticResource Style_button_mute}"  Canvas.Left="136" Canvas.Top="0" Command="{Command Path=Mute}"/>
    </Canvas>
  </Canvas>
</Canvas>
