<UserControl x:Class="MP2BootstrapperApp.Views.InstallWelcomePageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MP2BootstrapperApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <TextBox HorizontalAlignment="Center" Height="64" TextWrapping="Wrap" FontSize="20" Text="This is the next generation media center software available to all, open source, for free.
                 Making use of advanced technologies to bring you the best possible HTPC experience." VerticalAlignment="Center" Width="877" Background="{x:Null}" Foreground="White" Margin="0,35,0,0" SelectionBrush="{x:Null}" BorderBrush="{x:Null}" HorizontalContentAlignment="Center" BorderThickness="0" Focusable="False"/>

    <CheckBox x:Name="LicenceAgreed" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" FontSize="16" Foreground="White" Margin="50" Opacity="0.5"
              IsChecked="{Binding Path=LicenceAgreed, Mode=TwoWay}">
      <TextBlock VerticalAlignment="Center" Text="I accept the terms in the Licence Agreement below" Margin="0,-3,0,0"/>
    </CheckBox>

  </Grid>
</UserControl>
