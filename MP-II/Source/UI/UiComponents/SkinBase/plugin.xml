<Plugin
    Version = "1.0"
    Name = "SkinBase"
    Author = "Team MediaPortal"
    Copyright = "GPL"
    Description = "Base services for the skin and default skin"
    PluginVersion = "1.0">

  <DependsOn>
    <PluginReference Name="ConfigurationManager"/>
  </DependsOn>

  <Runtime>
    <Assembly FileName="SkinBase.dll"/>
  </Runtime>

  <Register Location="/Models">
    <Model Id="9E9D0CD9-4FDB-4c0f-A0C4-F356E151BDE0" Name="MenuModel" ClassName="UiComponents.SkinBase.MenuModel"/>
  </Register>

  <Register Location="/Models">
    <Model Id="E821B1C8-0666-4339-8027-AA45A4F6F107" Name="TimeModel" ClassName="UiComponents.SkinBase.TimeModel"/>
  </Register>

  <Register Location="/Resources/Language">
    <Resource Id="DefaultLanguage" Directory="Language" Type="Language"/>
  </Register>

  <Register Location="/Resources/Skin">
    <Resource Id="DefaultSkin" Directory="Skin" Type="Skin"/>
  </Register>

  <Register Location="/Configuration/Settings/Appearance">
    <ConfigGroup
        Id="System"
        Redundant="true"
        Text="[Configuration.System]"/>
  </Register>

  <Register Location="/Configuration/Settings/Appearance/Skin">
    <ConfigSetting
        Id="TimeFormat"
        Text="[Configuration.System.Skin.TimeFormat]"
        HelpText="[Configuration.System.Skin.TimeFormat.Help]"
        ClassName="UiComponents.SkinBase.Settings.Configuration.TimeFormat"/>
  </Register>

  <Register Location="/Configuration/Settings/Appearance/Skin">
    <ConfigSetting
        Id="DateFormat"
        Text="[Configuration.System.Skin.DateFormat]"
        HelpText="[Configuration.System.Skin.DateFormat.Help]"
        ClassName="UiComponents.SkinBase.Settings.Configuration.DateFormat"/>
  </Register>
</Plugin>