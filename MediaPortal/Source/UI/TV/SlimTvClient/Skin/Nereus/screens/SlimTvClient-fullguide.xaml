<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screens\master_nomenu.xaml"
    xmlns:mp_special_controls="clr-namespace:MediaPortal.UI.SkinEngine.SpecialElements.Controls;assembly=SkinEngine"
    xmlns:tv="clr-namespace:MediaPortal.Plugins.SlimTv.Client.Controls;assembly=SlimTv.Client"
    >
  <Include.Resources>

    <!-- Custom margin that will be applied to the content area -->
    <ResourceWrapper x:Key="CustomContentMargin" Resource="30,110,0,0" />

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[SlimTvClient.Guide]"/>

    <!-- SlimTvClient model -->
    <Model x:Key="SlimTvMultiChannelGuide" Id="5054408D-C2A9-451f-A702-E84AFCD29C10"/>
    <Model x:Key="SkinSettingsModel" Id="13961014-16C4-4361-9751-8E2C585EFD44"/>
    <Model x:Key="SlimTvSettings" Id="F5D4AA07-8469-46A7-8FD0-E1CD1E8F5898"/>
    <tv:SlimTvGuideTimeFormatConverter x:Key="SlimTvGuideTimeFormatConverter" />

    <ResourceWrapper x:Key="DynamicMultiGuideHeaderWidth" EnableBindings="True">
      <ResourceWrapper.Resource>
        <MultiBinding Converter="{StaticResource ExpressionMultiValueConverter}" ConverterParameter="{}({0} ? 90 : 0) + ({1} ? 160 : 0) + ({2} ? 200 : 0)">
          <Binding Source="{StaticResource SlimTvSettings}" Path="ShowChannelNumbers" />
          <Binding Source="{StaticResource SlimTvSettings}" Path="ShowChannelLogos" />
          <Binding Source="{StaticResource SlimTvSettings}" Path="ShowChannelNames" />
        </MultiBinding>
      </ResourceWrapper.Resource>
    </ResourceWrapper>

    <!-- Contents -->
    <ControlTemplate x:Key="Contents_Template">
      <Grid x:Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,-230"
            DataContext="{Binding Source={StaticResource SlimTvMultiChannelGuide}}">

        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="{ThemeResource GroupButtonWidth}"/>
          <ColumnDefinition Width="{ThemeResource DynamicMultiGuideHeaderWidth}"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
          <RowDefinition Height="Auto"/>
          <RowDefinition Height="*"/>
          <RowDefinition Height="220"/>
        </Grid.RowDefinitions>

        <Image Source="TopGlow.png" Grid.ColumnSpan="4" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Stretch" 
               Height="20" Margin="0,-20,0,0"/>
        <Rectangle Fill="#D9000000" Grid.ColumnSpan="4" Grid.RowSpan="2" Margin="-40,0,-40,0" />
        <Image Source="BottomGlow.png" Grid.ColumnSpan="4" Grid.Row="1" Stretch="Fill" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" 
               Height="20" Margin="0,0,0,-20"/>

        <StackPanel Grid.ColumnSpan="3" Margin="20,0,5,0" Orientation="Horizontal">
          <Image Source="HomeContentIcons\duration.png" Height="28" Width="28" Stretch="Uniform" Margin="0,0,5,-5"
                 VerticalAlignment="Center" HorizontalAlignment="Left"/>
          <Label HorizontalAlignment="Left" x:Name="Time" FontSize="{ThemeResource SmallFontSize}" VerticalAlignment="Center" FontFamily="Noto-Bold"
                 Content="{Binding Source={StaticResource TimeModel}, Path=CurrentTime}" Color="{ThemeResource TextColor}" Margin="0,0,0,-4">
            <Label.Resources>
              <Model x:Key="TimeModel" Id="E821B1C8-0666-4339-8027-AA45A4F6F107"/>
            </Label.Resources>
          </Label>          
        </StackPanel>


        <Grid x:Name="EpgTimeGrid" Grid.Column="2" Grid.ColumnSpan="2" 
              Grid.Row="0" HorizontalAlignment="Stretch" Margin="0,10,0,0">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>

          <StackPanel x:Name="TimeControls" Margin="-35,0,0,0" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="ScrollDoubleBackwardButton" Style="{StaticResource ScrollDoubleLeftButtonStyle}" 
                    Command="{Command ScrollBackward}" Height="30" VerticalAlignment="Center" Margin="0,-1,2,1">
              <Button.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.GotFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=SetScrollDayFocus}"/>
                </EventTrigger>
                <EventTrigger RoutedEvent="FrameworkElement.LostFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=UnsetScrollDayFocus}"/>
                </EventTrigger>
              </Button.Triggers>
            </Button>
            <Button x:Name="ScrollBackwardButton" Style="{StaticResource SubMenuRightButtonStyle}" 
                    Command="{Command ScrollBackwardHalfScreen}" Height="30" VerticalAlignment="Center" Margin="0,-1,0,1">
              <Button.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.GotFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=SetScrollHourFocus}"/>
                </EventTrigger>
                <EventTrigger RoutedEvent="FrameworkElement.LostFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=UnsetScrollHourFocus}"/>
                </EventTrigger>
              </Button.Triggers>
            </Button>
            <Label Grid.Column="0" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}" VerticalAlignment="Center" Margin="10,0,10,0">
              <Label.Content>
                <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0">
                  <Binding Path="GuideStartTime"/>
                  <Binding Path="VisibleHours" />
                </MultiBinding>
              </Label.Content>
            </Label>
            <Button x:Name="ScrollForwardButton" Style="{StaticResource SubMenuLeftButtonStyle}" 
                    Command="{Command ScrollForwardHalfScreen}" Height="30" VerticalAlignment="Center" Margin="0,-1,0,1">
              <Button.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.GotFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=SetScrollHourFocus}"/>
                </EventTrigger>
                <EventTrigger RoutedEvent="FrameworkElement.LostFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=UnsetScrollHourFocus}"/>
                </EventTrigger>
              </Button.Triggers>
            </Button>
            <Button x:Name="ScrollDoubleForwardButton" Style="{StaticResource ScrollDoubleRightButtonStyle}" 
                    Command="{Command ScrollForward}" Height="30" VerticalAlignment="Center" Margin="2,-1,0,1">
              <Button.Triggers>
                <EventTrigger RoutedEvent="FrameworkElement.GotFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=SetScrollDayFocus}"/>
                </EventTrigger>
                <EventTrigger RoutedEvent="FrameworkElement.LostFocus">
                  <TriggerCommand Command="{Command Source={StaticResource SlimTvMultiChannelGuide}, Path=UnsetScrollDayFocus}"/>
                </EventTrigger>
              </Button.Triggers>
            </Button>
          </StackPanel>

          <Label Grid.Column="1" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"
                 VerticalAlignment="Center" Margin="7,0,0,0">
            <Label.Content>
              <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0.25">
                <Binding Path="GuideStartTime"/>
                <Binding Path="VisibleHours" />
              </MultiBinding>
            </Label.Content>
          </Label>
          <Label Grid.Column="2" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"
                 VerticalAlignment="Center" Margin="7,0,0,0">
            <Label.Content>
              <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0.5">
                <Binding Path="GuideStartTime"/>
                <Binding Path="VisibleHours" />
              </MultiBinding>
            </Label.Content>
          </Label>
          <Label Grid.Column="3" Color="{ThemeResource TextColor}" FontSize="{ThemeResource SmallFontSize}"
                 VerticalAlignment="Center" Margin="7,0,0,0">
            <Label.Content>
              <MultiBinding Converter="{StaticResource SlimTvGuideTimeFormatConverter}" ConverterParameter="0.75">
                <Binding Path="GuideStartTime"/>
                <Binding Path="VisibleHours" />
              </MultiBinding>
            </Label.Content>
          </Label>
        </Grid>

        <tv:EpgGrid x:Name="EpgGrid" Style="{ThemeResource EpgGridStyle}" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="4" Margin="0,5,0,20"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HeaderWidth="{StaticResource DynamicMultiGuideHeaderWidth}"
                    LoopScroll="{Binding Source={StaticResource SkinSettingsModel}, Path=[Nereus].EnableLoopScrolling}">
        </tv:EpgGrid>

        <Grid Grid.Row="2" Grid.ColumnSpan="4" x:Name="ProgramInfoPanel" Margin="0,20,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
              IsVisible="{Binding Path=ProgramHasFocus,Mode=TwoWay}" DataContext="{Binding Source={StaticResource SlimTvMultiChannelGuide}}">
          <Include Source="screens\ProgramInfoSlim.inc"></Include>
        </Grid>

        <Label Grid.Row="2" Grid.ColumnSpan="4" Margin="40,20,0,0" Content="Select to switch between the channel groups" Color="{ThemeResource TextColor}"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               FontSize="{ThemeResource SmallFontSize}" IsVisible="{Binding Path=GroupHasFocus,Mode=TwoWay}"/>

        <Label Grid.Row="2" Grid.ColumnSpan="4" Margin="40,20,0,0" Color="{ThemeResource TextColor}" 
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Select channel to open the program guide only for it"
               FontSize="{ThemeResource SmallFontSize}" IsVisible="{Binding Path=ChannelHasFocus,Mode=TwoWay}"/>

        <Label Grid.Row="2" Grid.ColumnSpan="4" Margin="40,20,0,0" Color="{ThemeResource TextColor}" 
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               FontSize="{ThemeResource SmallFontSize}" IsVisible="{Binding Path=ScrollHourHasFocus,Mode=TwoWay}">
          <Label.Content>
            <MultiBinding Converter="{StaticResource ExpressionMultiValueConverter}" ConverterParameter="{}{0}+({1}/2)+{2}">
              <Binding Source="Scroll in the program timeline with "/>
              <Binding Source="{StaticResource SlimTvSettings}" Path="VisibleHours"/>
              <Binding Source=" hour increments"/>
            </MultiBinding>
          </Label.Content>
        </Label>

        <Label Grid.Row="2" Grid.ColumnSpan="4" Margin="40,20,0,0" Color="{ThemeResource TextColor}" 
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="Scroll in the program timeline with 1 day increments"
               FontSize="{ThemeResource SmallFontSize}" IsVisible="{Binding Path=ScrollDayHasFocus,Mode=TwoWay}"/>

        <!-- All KeyBindings are included from shared resource -->
        <Include Source="screens\TvGuideKeybindings.inc"/>
      </Grid>
    </ControlTemplate>

  </Include.Resources>
</Include>
