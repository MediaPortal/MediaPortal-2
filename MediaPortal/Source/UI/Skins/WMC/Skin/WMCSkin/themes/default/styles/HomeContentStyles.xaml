  <ControlTemplate x:Key="ContentIndicator_Template">
    <Grid x:Name="IndicatorGrid" Opacity="0">
      <Image Stretch="Uniform" Width="40" Source="i-indicator.png" Opacity="0.35"
             IsEnabled="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=IsEnabled}">
        <Image.Resources>
          <Storyboard x:Key="InfoBlinkStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity"
                                         AccelerationRatio="0.2" DecelerationRatio="0.2"
                                         BeginTime="00:00:00" RepeatBehavior="Forever" FillBehavior="HoldEnd">
              <SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
              <SplineDoubleKeyFrame KeyTime="00:00:01.5" Value="0.35"/>
              <SplineDoubleKeyFrame KeyTime="00:00:03" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
          </Storyboard>
          <Storyboard x:Key="DelayStoryboard">
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="IndicatorGrid" Storyboard.TargetProperty="Opacity" RepeatBehavior="None"
                                           BeginTime="00:00:00" FillBehavior="HoldEnd">
              <SplineDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
              <SplineDoubleKeyFrame KeyTime="00:00:04.0" Value="0"/>
              <SplineDoubleKeyFrame KeyTime="00:00:04.1" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
          </Storyboard>
        </Image.Resources>
        <Image.Triggers>
          <MultiTrigger>
            <MultiTrigger.Conditions>
              <Condition Binding="{Binding Source={StaticResource HomeContentModel}, Path=IsContentFocused}" Value="False"/>
              <Condition Property="IsEnabled" Value="True"/>
            </MultiTrigger.Conditions>
            <MultiTrigger.EnterActions>
              <BeginStoryboard x:Name="Disabled_BeginStoryBoard" Storyboard="{ThemeResource InfoBlinkStoryboard}"/>
              <BeginStoryboard x:Name="Delay_BeginStoryBoard" Storyboard="{ThemeResource DelayStoryboard}"/>
            </MultiTrigger.EnterActions>
            <MultiTrigger.ExitActions>
              <StopStoryboard BeginStoryboardName="Disabled_BeginStoryBoard"/>
              <StopStoryboard BeginStoryboardName="Delay_BeginStoryBoard"/>
            </MultiTrigger.ExitActions>
          </MultiTrigger>
        </Image.Triggers>
      </Image>
    </Grid>
  </ControlTemplate>

  <Style x:Key="HomeMediaListGridViewContainerStyle" BasedOn="{ThemeResource DefaultItemContainerStyle}">
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="{x:Type ListViewItem}">
          <Button Style="{ThemeResource ButtonWideStyle_Grid}"
                  Command="{Binding Path=Command,Mode=OneTime}"
                  IsEnabled="{Binding Enabled}" SetFocus="{Binding Path=Selected,Mode=OneTime}">
            <Button.IsEnabled>
              <MultiBinding Converter="{StaticResource ExpressionMultiValueConverter}" ConverterParameter="{}{0} &amp;&amp; {1}">
                <!-- Consider the item's enabled state -->
                <Binding Path="Enabled"/>
                <!-- In combination with the parent ListView's enabled state -->
                <Binding RelativeSource="{RelativeSource Mode=FindAncestor,AncestorType={x:Type ListView}}" Path="IsEnabled"/>
              </MultiBinding>
            </Button.IsEnabled>
          </Button>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

