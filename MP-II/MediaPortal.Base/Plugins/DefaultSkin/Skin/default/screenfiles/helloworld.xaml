<?xml version="1.0" encoding="utf-8"?>
<Canvas
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    DataContext="{Binding Source={Model RegistrationLocation=HelloWorld,Id=Model}}"
    FocusedElement="{Binding ElementName=BtnChangeText}">

  <Canvas Background="{StaticResource BackgroundBrush}" Width="720" Height="576">
    <Label Canvas.Left="0" Canvas.Top="0" Width="600" Content="{Binding Path=HelloString}" />
	<Button Canvas.Left="60" Canvas.Top="60" x:Name="BtnChangeText" Style="{StaticResource ButtonStyle}" Content="Click Me!">
    <Button.Command>
      <Command Path="ChangeHelloWorldString"/>
    </Button.Command>
    </Button>

  </Canvas>
</Canvas>
