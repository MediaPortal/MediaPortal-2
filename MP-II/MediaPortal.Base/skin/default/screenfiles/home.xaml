<?xml version="1.0" encoding="utf-8"?>
<Include
    xmlns="www.team-mediaportal.com/2008/mpf/directx"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Source="screenfiles\master_menu.xaml"
    >
  <Include.Resources>

    <!-- Header -->
    <ResourceWrapper x:Key="Header_Text" Resource="[login.welcome]"/>

    <!-- DataContext -->
    <Model x:Key="DataContext" RegistrationLocation="Menu" Id="HomeMenu"/>

    <!-- Menu -->
    <ResourceWrapper x:Key="Menu_Items">
      <Binding Source="{StaticResource DataContext}" Path="Plugins" Mode="OneTime"/>
    </ResourceWrapper>

    <!-- Menu command -->
    <CommandBridge x:Key="Menu_Command"
        Command="{Binding Path=Command,Mode=OneTime}"
        CommandParameter="{Binding Path=CommandParameter,Mode=OneTime}"/>

    <!-- Contents -->
    <ResourceWrapper x:Key="Contents_Element"/>

  </Include.Resources>
</Include>
